<Window x:Class="LibraryApp.View.LoanCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize" 
        BorderBrush="Black"
        Title="LoanCardWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Brukerinfo" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="16"/>
        <StackPanel Grid.Row="1">
            <Label Content="Id:" VerticalAlignment="Top"/>
            <Label Content="Navn:" VerticalAlignment="Top"/>
            <Label Content="Lånekort:" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label x:Name="Id" HorizontalAlignment="Left"/>
            <Label x:Name="Name" HorizontalAlignment="Left"/>
            <Label x:Name="LoanCard" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Grid.ColumnSpan="2">
        <Button Content="Tildel kort" Click="ButtonIssueLoanCard_OnClick"/>
        <Button Content="Frata kort" Click="ButtonRevokeLoanCard_OnClick"/>
        </StackPanel>
        <Button Grid.Row="3" Content="Tilbake" Grid.ColumnSpan="2" Click="ButtonBack_OnClick"/>
        <Rectangle Grid.ColumnSpan="2" Grid.RowSpan="4"/>
    </Grid>
    </Window>
